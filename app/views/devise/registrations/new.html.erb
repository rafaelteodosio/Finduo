<style>
  .div_registrar
    {
      background-color: #000;
      background-size: 100%;
      width: 100%;
      height: 100%;
      color: #4169E1;
      text-align: center;
      font-family: Purisa;
    }

    .logo{
      font-family: Purisa;
        font-size: 30pt;
        color: #4169E1;
        padding: 30px;
        width: 30%;
        text-align: left;
    }

</style>
<div class="div_registrar">
<p class="logo">FinDUO?</p>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :Nickname %><br />
    <%= f.text_field :nickname, autofocus: true %>
  </div>
</br>

<div class="field">
  <%= f.label :elo %><br />
  <%= f.text_field :elo, autofocus: true %>
</div>
</br>

  <div class="field">
    <%= f.label :data_de_nascimento %><br />
    <%= f.date_field :data_de_nascimento, autofocus: true %>
  </div>
</br>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>
</br>
  <div class="field">
    <%= f.label :senha %>
    <% if @minimum_password_length %>
    <em>(MÃ­nimo de <%= @minimum_password_length %> caracteres)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>
</br>
  <div class="field">
    <%= f.label :confirmar_senha %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>
</br>
  <div class="actions">
     <div class="encontre-equipe">
    <%= f.submit "Registrar" %>
  </div>
</div>
<% end %>
</br></br></br></br>
<p><%= link_to "Voltar", root_path %></p>
</div>
